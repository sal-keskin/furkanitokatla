<title>Click Counter</title>
<style>
  body, html {
    height: 100%;
    margin: 0;
    font-family: Arial, sans-serif;
    background: url('background.jpg') center/cover no-repeat;
    text-align: center;
    color: white;
  }
  .counter {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 2em;
  }
  .button-container {
    position: absolute;
    bottom: 10%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  .button {
    padding: 20px;
    border: none;
    background-color: #000;
    color: white;
    border-radius: 50%;
    font-size: 1.5em;
    cursor: pointer;
  }
  .button:focus {
    outline: none;
  }
  .button:active {
    background-color: #333;
  }
  .global-counter {
    position: absolute;
    top: 10%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.5em;
  }
  #gif {
    max-width: 100%;
    height: auto;
    display: block; /* Show the first frame initially */
  }
